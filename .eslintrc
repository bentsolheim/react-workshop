{
	"settings": {
		"react": {
			"version": "latest"
		}
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true,
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"plugins": [
		"react"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:jest/recommended",
		"plugin:import/errors",
		"plugin:import/warnings"
	],
	"rules": {
		"indent": [2, "tab"],
		"quotes": [2, "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
		"no-unused-vars": 1,
		"eqeqeq": [2, "always", {"null": "ignore"}],
		"semi": [2, "never"]
	}
}